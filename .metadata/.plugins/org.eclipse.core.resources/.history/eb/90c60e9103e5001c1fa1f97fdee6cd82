package condicional;

import java.util.Scanner;

public class Semana {

	public static void main(String[] args) {
		int opcao;
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite um número de 1 a 7: ");
		opcao = sc.nextInt();
		
		switch(opcao) {
		case 1:
			System.out.printf("O número %f é Domingo", opcao);
			break;
		case 2:
			System.out.printf("O número %f é Segunda-Feira", opcao);
			break;
		case 3:
			System.out.printf("O número %f é Terça-Feira", opcao);
			break;
		case 4:
			System.out.printf("O número %f é Quarta-Feira", opcao);
			break;
		case 5:
			System.out.printf("O número %f é Quinta-Feira", opcao);
			break;
		case 6:
			System.out.printf("O número %f é Sexta-Feira", opcao);
			break;
		case 7:
			System.out.printf("O número %f é Sábado", opcao);
			break;
		default:
			System.out.println("Opção Invalida");
		}
		
		sc.close();

	}

}
